<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_recupera_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_127" />

    <ImageView
        android:id="@+id/img_link_url"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img_recupera_foto"
        android:src="@drawable/icon_177" />

    <EditText
        android:id="@+id/edit_link_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_link_url"
        android:hint="http://www.link.com.br"
        android:textAlignment="center" />
</RelativeLayout>