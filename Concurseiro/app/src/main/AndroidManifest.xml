<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.concurseiro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Configuration.iniConfiguration"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Views.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.Registre_se_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.LoginCustomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.EscolherMestreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.PergunteMestreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.LoginApiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.ListaPergSemMestreProfessorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Views.PergunteMestreRespostaParaAlunoActivity" />
        <activity android:name=".Views.ListaPergSemMestreEstudanteActivity" />
        <activity android:name=".Views.PergunteMestreAceitePerguntaActivity" />
        <activity android:name=".Views.ObterCreditosActivity"></activity>
    </application>

</manifest>